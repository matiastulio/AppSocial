<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.EscalaPlanejar"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_escala_planejar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:background="?attr/colorPrimary"/>

<!--         primeira linha                -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:onClick="chamaSortPeople"
        android:id="@+id/escala_planejar_LL1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="100">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coordenador de Sexta"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:id="@+id/escala_planejar_l1"
                android:text="Indicar"/>

        </LinearLayout>
        <ImageView
            android:id="@+id/ic_escala_planejar_l1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/checkbox_blank_circle_outline"
            android:layout_weight="1"/>

    </LinearLayout>


    <!--         segunda linha                -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:onClick="chamaSortPeople"
        android:id="@+id/escala_planejar_LL2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="100">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coordenador de Roteiro 1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:id="@+id/escala_planejar_l2"
                android:text="Gabriela"/>

        </LinearLayout>
        <ImageView
            android:id="@+id/ic_escala_planejar_l2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/checkbox_marked_circle_outline"
            android:layout_weight="1"/>

    </LinearLayout>

    <!--         terceira linha                -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:onClick="chamaSortPeople"
        android:id="@+id/escala_planejar_LL3">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="100">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coordenador de Roteiro 2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:id="@+id/escala_planejar_l3"
                android:text="Manoel"/>

        </LinearLayout>
        <ImageView
            android:id="@+id/ic_escala_planejar_l3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/checkbox_blank_circle_outline"
            android:layout_weight="1"/>

    </LinearLayout>

    <!--         quarta linha                -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:onClick="chamaSortPeople"
        android:id="@+id/escala_planejar_LL4">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="100">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voluntários de Sexta"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:id="@+id/escala_planejar_l4"
                android:text="Visualizar"/>

        </LinearLayout>
        <ImageView
            android:id="@+id/ic_escala_planejar_l4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_email_outline"
            android:layout_weight="1"/>

    </LinearLayout>
    <!--         quinta linha                -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:onClick="chamaSortPeople"
        android:id="@+id/escala_planejar_LL5">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="100">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Responsável pela Harmonização"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:id="@+id/escala_planejar_l5"
                android:text="João"/>

        </LinearLayout>
        <ImageView
            android:id="@+id/ic_escala_planejar_l5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/checkbox_marked_circle_outline"
            android:layout_weight="1"/>

    </LinearLayout>
</LinearLayout>
