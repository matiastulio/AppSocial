<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="grad.unb.br.appsocial">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/defaultAppTheme">
        <activity
            android:name=".activities.LoginPage"
            android:screenOrientation="portrait"
            android:theme="@style/cadastroUserStyle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <uses-library android:name="com.google.android.maps" />

        <activity
            android:name=".activities.CadastroPage"
            android:screenOrientation="portrait"
            android:theme="@style/cadastroUserStyle" />
        <activity
            android:name=".activities.TabActivityPage"
            android:screenOrientation="portrait" />
        <activity android:name=".activities.SortPeopleListPage" />
        <activity
            android:name=".activities.MapsActivity"
            android:label="@string/title_activity_maps" />
        <activity android:name=".activities.AvisoPlanejarPage" />
        <activity android:name=".activities.EscalaSexta" />
        <activity android:name=".activities.CalendarViewPage" />
        <activity android:name=".activities.GenericCardViewPage" />
        <activity android:name=".activities.EscalaSabado" />
        <activity android:name=".activities.CadastroAssistidoPage" />
    </application>

</manifest>